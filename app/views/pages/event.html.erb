<div class="main">
	
	<div class="eventinfo">
		<h2 class="eventinfo__eventname"><%= @event.name %></h2>
		<h3 class="eventinfo__ownername"><span>by</span> <%= @event.owner.name %></h3>
		<p class="eventinfo__description"><%= @event.description %></p>
		<p class="eventifo__eventtime"><%= @event.start_time.strftime("%d/%m/%Y %H:%M") %></p>
	</div>
	
</div>

<p>Homens: <%= @males.size %></p>
<p>Damas:  <%= @females.size %></p>

<h3>Homens:</h3>
<% @males.each do |user| %>
  <%= link_to user["name"], user["link"] %> <br>
<% end %>
<br><br>
<h3>Mulheres</h3>
<% @females.each do |user| %>
  <%= link_to user["name"], user["link"] %> <br>
<% end %>

